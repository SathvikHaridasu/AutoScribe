{
  "manifest_version": 3,
  "name": "AutoScribe",
  "version": "1.0",
  "description": "Universal text typing automation - works on any website.",
  "permissions": ["activeTab", "scripting", "tabs", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 